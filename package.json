{
  "name": "arkadius-bot",
  "version": "1.0.0",
  "description": "бот Карл",
  "main": "index.js",
  "scripts": {
    "build": "swc src -d dist --copy-files --strip-leading-paths",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts,js,json,md --exec node -r @swc-node/register src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type:check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install",
    "migration:up": "node -r @swc-node/register src/migrate.ts up",
    "migration:down": "node -r @swc-node/register src/migrate.ts down",
    "migration:check": "node -r @swc-node/register src/migrate.ts check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/natural": "^6.0.1",
    "dotenv": "^17.1.0",
    "inversify": "^7.0.0-alpha.5",
    "natural": "^8.1.0",
    "openai": "^5.12.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "@types/node": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.5.2"
}
